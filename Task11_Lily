#include <iostream>

int main()
{
	int years;
	std::cin >> years;

	double washingMach;
	std::cin >> washingMach;

	int toyPrice;
	std::cin >> toyPrice;
	
	int toyYears = 0;
	int moneyYears = 0;

	for (int i = 1; i <= years; i++)
	{
		if (i % 2 == 0)
		{
			moneyYears++;
		}
		else
		{
			toyYears ++;
		}		
	}

	int money = 0;
	for (int i = 1; i <= moneyYears; i++)
	{
		money += 10 * i;
	}

	money += (toyYears * toyPrice) - moneyYears;

	double diff = abs((washingMach - money)*1.00);

	if (money - washingMach >= 0)
	{
		std::cout.precision(2);
		std::cout << std::fixed;
		std::cout << "Yes! " << diff << std::endl;
	}
	
	else
	{
		std::cout.precision(2);
		std::cout << std::fixed;
		std::cout << "No! " << diff << std::endl;
	}
	//int bonus = 10;
	//bonus += 10;
	//int broLil = 1;
	//broLil -= 1;


	return 0;
}
